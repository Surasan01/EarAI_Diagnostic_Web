# ============================================================================
# 1️⃣  Build Stage – Compile TypeScript & bundle with Vite
# ============================================================================

FROM node:20-alpine AS builder

# Working directory inside the container
WORKDIR /app

# --------------------------------------------------------------------
# Install dependencies (including devDependencies needed for the build)
# --------------------------------------------------------------------
COPY package.json ./
RUN npm install --legacy-peer-deps

# --------------------------------------------------------------------
# Copy only the files required for the build
# --------------------------------------------------------------------
COPY index.html ./
COPY vite.config.ts ./
COPY tsconfig*.json ./
COPY tailwind.config.js ./
COPY postcss.config.cjs ./
COPY components.json ./
COPY eslint.config.js ./
COPY src/ ./src/

# --------------------------------------------------------------------
# Pass the Convex URL as a build‑time argument and expose it as an ENV
# --------------------------------------------------------------------
ARG VITE_CONVEX_URL
ENV VITE_CONVEX_URL=${VITE_CONVEX_URL}

# --------------------------------------------------------------------
# Build the application – Vite will embed the env variable
# --------------------------------------------------------------------
RUN npm run build

# Verify that the build succeeded
RUN test -d dist || (echo "ERROR: Build failed" && exit 1)

# ============================================================================
# 2️⃣  Production Stage – Serve static files with Nginx
# ============================================================================

FROM nginx:alpine

# Copy the built static assets from the builder stage
COPY --from=builder /app/dist /usr/share/nginx/html

# Copy the custom Nginx configuration
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Expose HTTP port
EXPOSE 80

# Optional health check – ensures the container is ready
HEALTHCHECK --interval=30s --timeout=5s --start-period=5s \
  CMD curl -f http://localhost/ || exit 1

# Start Nginx in the foreground
CMD ["nginx", "-g", "daemon off;"]